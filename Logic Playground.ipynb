   "source": [
    "# Parameters\n",
    "x0, y0 = 0.0, 2.0\n",
    "angle_deg = 45\n",
    "\n",
    "table_size = 10        # 10x10 table\n",
    "max_hits = 100         # Max bounces to simulate\n",
    "tol = 1e-9             # Tolerance for checking float equality"
   ]
